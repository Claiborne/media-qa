require 'rubygems'
require 'rake'
require 'rspec/core/rake_task'

ENV["env"] ||= 'staging'

############# ALL ############# 

# RUN ALL

desc "Run all tests"
RSpec::Core::RakeTask.new('all') do |t|
  t.rspec_opts = ["-Ilib","--format documentation","--color"]
  t.pattern = [
      'spec/oyster/media/*.rb',
      'spec/v3/*/*.rb'
  ]
end

# RUN ALL FRONTEND 

desc "Run all frontend tests"
RSpec::Core::RakeTask.new('frontend') do |t|
  t.rspec_opts = ["-Ilib","--format documentation","--color"]
  t.pattern = [
      'spec/oyster/media/*.rb',
      'spec/phantom/**/*.rb'
  ]
end

