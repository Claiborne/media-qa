require 'rubygems'
require 'rake'
require 'rspec/core/rake_task'

ENV["env"] ||= 'staging'

desc "Run all test suites"
RSpec::Core::RakeTask.new('all') do |t|
    t.rspec_opts = ["-Ilib","--format documentation","--color"]
    t.pattern = 'spec/**/*.rb'
end

desc "" 
RSpec::Core::RakeTask.new('oauth2') do |t|
    t.rspec_opts = ["-Ilib","--format documentation","--color"]
    t.pattern = 'spec/topaz/oauth2/**/*.rb'
end

